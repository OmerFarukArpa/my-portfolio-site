@using MvcCv.Models.Entity
@model List<TblSertifikalarım>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        
                        <!-- /.col -->
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">
                                     
                                </div><!-- /.card-header -->
                                <div class="card-body">
                                          
                                        <div class="tab-pane" id="timeline">
                                            <!-- The timeline -->
                                            <div class="timeline timeline-inverse">
                                                <!-- timeline time label -->
                                                @foreach (var x in Model)
                                                {
                                                <div class="time-label">
                                                    <a href="/Certificate/BringCertificate/@x.ID" class="btn btn-success">
                                                        <span class="bg-success">
                                                            @x.Tarih
                                                        </span>
                                                    </a>
                                                </div>
                                                <!-- /.timeline-label -->
                                                <!-- timeline item -->
                                                <div>                                             
                                                    <div class="timeline-item">
                                                          <div class="timeline-body">
                                                           @x.Aciklama
                                                        </div>                                                                                            
                                                    </div>
                                                </div> 
                                                }
                                            </div>
                                               <a href="/Certificate/NewCertificate" class="btn btn-info">Yeni Sertifika Girişi</a>
                                        </div>
                                    </div> 
                                </div> 
                            </div> 
                        </div> 
                    </div> 
            </section>
</body>
</html>